<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/common_button_selected"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/white"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程名称"
                android:textColor="@color/base_font_color"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/course_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:alpha="0.4"
                android:background="@color/main_color"
                android:text="必修"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_course_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成绩"
                android:layout_marginRight="10dp"
                android:textColor="@color/base_font_color"
                android:textSize="15dp" />
            <ImageView
                android:src="@mipmap/arrow_right_blue"
                android:alpha="0.5"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:background="@color/base_layout_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
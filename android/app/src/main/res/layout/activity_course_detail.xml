<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.student.MineActivityActivity">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@mipmap/fragment_main_part1_header_bg"
        android:layout_height="@dimen/header_height">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/arrow_left_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/header_back_textsize" />
        </LinearLayout>

        <TextView
            android:text="课程详情"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/header_title_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/base_line_color"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_margin="15dp"
                        android:background="@drawable/fragment_main_part2_roundcircle_tag"
                        android:layout_width="6dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本信息"
                        android:textColor="@color/base_font_color"
                        android:textSize="@dimen/fontsize_15" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程名称"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="容纳人数"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_stunum"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程简介"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_abstract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细介绍"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上课时间"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/common_noline_edittext"
                    android:text=""
                    android:textColor="@color/base_font_color2" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上课地点"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/common_noline_edittext"
                    android:text=""
                    android:textColor="@color/base_font_color2" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程类型"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2"
                    android:textSize="17sp" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程状态"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2"
                    android:textSize="17sp" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程学分"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2"
                    android:textSize="17sp" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开课学期"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2"
                    android:textSize="17sp" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任教老师"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/course_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2"
                    android:textSize="17sp" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程备注"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学校学院"
                    android:textColor="@color/base_font_color" />

                <TextView
                    android:id="@+id/college_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/base_font_color2" />

            </LinearLayout>
            <View
                android:background="@color/base_line_color"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:id="@+id/manager_bar"
                android:visibility="gone"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/modify_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="修改"
                    android:textColor="@color/main_color" />

                <TextView
                    android:id="@+id/delete_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>